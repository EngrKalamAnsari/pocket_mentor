<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Your Lessons</h2>
    <%= link_to "Create New Lesson", new_lesson_path, class: "btn btn-primary" %>
  </div>

  <% if @lessons.any? %>
    <div class="row">
      <% @lessons.each do |lesson| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= lesson.topic %></h5>

              <p class="text-muted mb-2">
                Level: <strong><%= lesson.level.capitalize %></strong>
              </p>

              <p class="card-text">
                <%= truncate(lesson.content, length: 120) %>
              </p>

              <div class="d-flex justify-content-between mt-3">
                <%= link_to "View", lesson_path(lesson), class: "btn btn-outline-primary btn-sm" %>
                <small class="text-muted"><%= lesson.created_at.strftime("%d %b %Y") %></small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      You donâ€™t have any lessons yet. Create one now!
    </div>
  <% end %>
</div>

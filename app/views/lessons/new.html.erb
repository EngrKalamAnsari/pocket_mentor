<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-body">

      <h3 class="mb-4 text-center">Generate New AI Lesson</h3>

      <%= form_with model: @lesson, local: true do |f| %>

        <div class="mb-3">
          <%= f.label :topic, class: "form-label fw-bold" %>
          <%= f.text_field :topic, class: "form-control", placeholder: "e.g. Ruby on Rails, Photosynthesis" %>
        </div>

        <div class="mb-3">
          <%= f.label :level, class: "form-label fw-bold" %>
          <%= f.select :level,
                ["beginner", "intermediate", "advanced"],
                { prompt: "Select level" },
                class: "form-select" %>
        </div>

        <%= f.submit "Generate Lesson", class: "btn btn-success w-100 py-2" %>

      <% end %>

    </div>
  </div>
</div>

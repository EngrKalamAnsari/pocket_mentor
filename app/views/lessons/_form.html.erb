<div class="bg-white shadow-md rounded-xl p-8 max-w-2xl mx-auto">
  <%= form_with(model: lesson, local: true) do |f| %>

    <div class="mb-4">
      <%= f.label :title, class: "block text-gray-700 font-semibold" %>
      <%= f.text_field :title, class: "w-full p-3 border rounded-lg mt-1" %>
    </div>

    <div class="mb-4">
      <%= f.label :content, class: "block text-gray-700 font-semibold" %>
      <%= f.text_area :content, rows: 6,
            class: "w-full p-3 border rounded-lg mt-1" %>
    </div>

    <%= f.submit class: "w-full bg-indigo-600 text-white py-3 rounded-lg hover:bg-indigo-700" %>

  <% end %>
</div>

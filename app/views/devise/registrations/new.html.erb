<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="card shadow-lg p-4" style="width: 460px; border-radius: 12px;">

    <h3 class="text-center mb-3 fw-bold">Create Your Account </h3>
    <p class="text-center text-muted mb-4">Sign up to start generating AI-powered lessons</p>

    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>

      <div class="mb-3">
        <%= f.label :email, class: "form-label fw-semibold" %>
        <%= f.email_field :email, autofocus: true, class: "form-control form-control-lg", placeholder: "Enter your email" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label fw-semibold" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Create a password" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label fw-semibold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Repeat password" %>
      </div>

      <%= f.submit "Sign Up", class: "btn btn-success w-100 py-2 mt-2" %>

    <% end %>

    <hr class="my-4">

    <div class="text-center">
      <p class="text-muted">Already have an account?</p>
      <%= link_to "Login", new_user_session_path, class: "btn btn-outline-primary w-100" %>
    </div>

  </div>
</div>

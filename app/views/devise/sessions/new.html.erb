<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="card shadow-lg p-4" style="width: 420px; border-radius: 12px;">

    <h3 class="text-center mb-4 fw-bold">Welcome Back ðŸ‘‹</h3>
    <p class="text-center text-muted mb-4">Login to continue learning</p>

    <%= form_with scope: :user, url: session_path(:user), local: true do |f| %>

      <div class="mb-3">
        <%= f.label :email, class: "form-label fw-semibold" %>
        <%= f.email_field :email, autofocus: true, class: "form-control form-control-lg", placeholder: "Enter your email" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label fw-semibold" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg", placeholder: "Enter your password" %>
      </div>

      <%= f.submit "Login", class: "btn btn-primary w-100 py-2 mt-2" %>

    <% end %>

    <hr class="my-4">

    <div class="text-center">
      <p class="text-muted">Don't have an account?</p>
      <%= link_to "Create Account", new_user_registration_path, class: "btn btn-outline-secondary w-100" %>
    </div>

  </div>
</div>
